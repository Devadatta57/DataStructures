package ArraysPrograms;

import java.util.Arrays;

class ArrayWav{
	public static void smallHigh(int[] a,int low,int high) {
		
		while(low<=high) {
			System.out.print(a[low]+" "+a[high]+" ");
			low++;
			high--;
		}
//		if(low==high) {
//			System.out.println(a[low]);
//		}//no problem if print 2 time swe want 1st smallest and 1st largest and 2nd smallest and 2nd largest
	
}
}
public class ArrayWave {
	public static void main(String[] args) {
		 int a[]=new int[5];
	     a=new int[] {1,2,3,4,5};
	     
	     Arrays.sort(a);
	     
//	     for(int i=0;i<a.length;i++) {
//	    	 System.out.println(a[i]);
//	     }
	  
	     ArrayWav.smallHigh(a,0,a.length-1);
	}
}
